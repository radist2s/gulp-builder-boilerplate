{
  "name": "boilerplate-gulpfile-image",
  "config": {
    "localInstallation": false,
    "rasterSprites": {
      "chunksMask": "**/*.png",
      "chunksMaskRetina": "**/*2x.png",
      "cssBuildDir": "../../assets/src/less/parts/sprites",
      "imgBuildDir": "../../assets/dist/img/build/sprites",
      "imgBuildDirCss": "../img/build/sprites",
      "outFormat": "less",
      
      "tasks": [
        {
          "sourcePath": "../../assets/src/img/desktop/sprites/main",
          "png8": false,
          "jpeg": false,
          "retina": true,
          "spriteVarPrefix": "icon-",
          "buildSubDir": "desktop"
        }
      ]
    },
    "svgSprites": {
      "sourceDir": ["../../assets/src/img/svg/sprites-main"],

      "outStyleFile": {
        "sprite": "../../assets/src/less/build/sprites/svg-sprite.less",
        "symbols": "../../assets/src/less/build/sprites/%subDir/svg-symbols.less"
      },

      "buildDir": "../../assets/dist/img/build/sprites/svg",
      "styleSvgPath": "../img/build/sprites/svg/%f",
      "symbolsBaseUrl": "assets/img/build/sprites/svg/%f",

      "spriteFileName": "sprite.svg",
      "symbolFileName": "symbols.svg",
      "selector": "icon-%f"
    }
  },
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "gulptasks-image.js",
  "dependencies": {
    "gulp-imagemin": "*",
    "gulp.spritesmith": ">=6.2",
    "imagemin-pngquant": ">=4.0.0",
    "imagemin-webp": ">=4.0.0",
    "gulp-svg-sprites": ">=3.0",
    "imagemin-svgo": "*",
    "svgo-plugin-unify-ids": "*",
    "gulp-retina-sprites-normalizer": "*"
  },
  "devDependencies": {},
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC"
}
